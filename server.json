{
	"app": {
		"plugins":{
			"router": {
				"module": "/plugins/router.js"
			},			
			"pipelines": {
				"module": "/plugins/pipelines.js"
			},
			"view": {
				"module": "broadway-handlebars",
				"options": {
					"optimize": false,
					"development": true,
					"view": {
                        "base": ["./views"],
                        "ext": "html"
                    }
				}
			},
			"json": {
				"module": "mixdown-plugins#Json"
			},
			"error": {
				"module": "mixdown-plugins#Error"
			},
			"static": {
                "module": "mixdown-plugins#Static"
            },
			"less": {
				"module": "mixdown-less",
				"options": { 
					"compress": true, 
					"paths": ["./css"] 
				}
			}
		}
	},
	"sites": [
		{
			"id": "boilerplate",
			"hostmap": [
				"localhost",
				"127.0.0.1"
			],
			"plugins": {}
		}
	],
    "server": {
        "listen": {
            "port": 8081,
            "type": "tcp",
            "path": "/tmp/socketname.sock"
        },
        "logger": {
            "defaults": {
                "handleExceptions": false,
                "json": false,
                "timestamp": true,
                "colorize": true,
                "prettyPrint": true
            },
            "transports": [{
                "transport": "Console",
                "options": {
                    "level": "debug"
                }
            }]
        }
    }
}